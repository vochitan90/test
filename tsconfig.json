{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./src",
        "downlevelIteration": true,
        "importHelpers": true,
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "target": "es2015",
        "lib": [
            "es2018",
            "dom"
        ],
        "module": "es2020",
        "skipLibCheck": true
    },
    "angularCompilerOptions": {
        "enableIvy": true
    }
}